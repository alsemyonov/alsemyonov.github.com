article.b-article-excerpt.h-entry
  h2.b-article-excerpt__title = link_to article.title, article, class: 'u-url p-name', rel: 'canonical'
  .p-content = article.body
  p.b-article-excerpt__meta
    - if article.author
      span&author[itemscope itemtype="http://schema.org/Person"]
        ' Â©
        = link_to article.author.url, itemprop: 'url' do
          span&name = article.author.name
        ' ,
    time.dt-published datetime=article.date.xmlschema = l(article.date.to_date, format: :long)
