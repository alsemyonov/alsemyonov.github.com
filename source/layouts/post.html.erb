<% wrap_layout :default do %>
  <article class="post" itemscope itemtype="http://schema.org/BlogPosting">

    <header class="post-header">
      <h1 class="post-title" itemprop="name headline"><%= current_page.title %></h1>
      <p class="post-meta">
        <time datetime="<%= current_page.date.xmlschema %>" itemprop="datePublished"><%= format_date(current_page.date, "%b %-d, %Y") %></time>
        <% if current_page.data.author %> â€¢
          <span itemprop="author" itemscope itemtype="http://schema.org/Person"><span itemprop="name"><%= current_page.data.author %></span></span>
        <% end %>
      </p>
    </header>

    <div class="post-content" itemprop="articleBody">
      <%= yield %>
    </div>

  </article>
<% end %>
